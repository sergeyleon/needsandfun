                                <div class="clear"></div>
                              </label>
                            </div>

                            <div class="search-popup-item">
                              <label>
                                <div class="search-popup-checkbox">
                                  <input type="checkbox" name="filter[articles]" value="1" />
                                </div>
                                <div class="search-popup-text">
                                  Статьи
                                </div>
                                <div class="clear"></div>
                              </label>
                            </div>

                            {{ markup.button({'value': 'Найдись!'}) }}
