                        </div>
                    </div>
                    
                    <div class="menu-item links">
                        <a href="{{ path('shop_payment') }}">Оплата</a>
                        <div class="menu-item-delim">/</div>
                        <a href="{{ path('shop_delivery') }}">Доставка</a>
                    </div>
                    
                    <div class="menu-item">
                        <a href="{{ path('shop_about') }}">О нас</a>
                    </div>
                </div>
                
                <div class="menu-group right small">
                    {% if loggedUser %}
                      <div class="menu-item">
                          <a href="{{ path('cabinet_index') }}">Личный кабинет</a>
