                            <div data-type="cart-size" class="cart-number">
                                {{ cart.getSize }}
                            </div>
                        </a>
                    </div>
                </div>
                
                <div class="menu-group-wrap">
                    <div class="menu-group">
                        <div class="menu-item big">

                            <a href="{{ path('events_index') }}">СОБЫТИЯ</a>
