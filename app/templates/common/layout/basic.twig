  {% import defaults.macros ~ '/common.twig' as common %}
  {% import defaults.macros ~ '/markup.twig' as markup %}
<body>
  {% block modal %}
    <div class="modal closed" id="login-form">
      <div class="modal-wrap">
        <div class="login-wrap">
          <div class="login">
            <div class="login-padder">
              <form method="post" action="{{ path('index') }}">
                <div class="login-close"></div>
                <table class="login-table">
                  <tr>
                    <td colspan="4">
                      <div class="login-head">
                        Вход
                      </div>
                    </td>
                  </tr>

                  <tr>
                    <td colspan="4">
                      <div class="login-item-wrap">
                        <div class="input-wrap">
                          <input type="text" name="login" placeholder="Имя пользователя" />
                        </div>
                      </div>
                    </td>
                  </tr>

                  <tr>
                    <td colspan="4">
                      <div class="login-item-wrap password">
                        <div class="input-wrap">
                          <input type="password" name="password" placeholder="Пароль" />
                        </div>
                      </div>
                    </td>
                  </tr>

                  <tr class="padder">
                    <td width="50px">
                      <a href="{{ path('forgot_password') }}">Забыли пароль?</a>
                    </td>
                    <td width="110px">
                        Вы также можете зайти на сайт через ваш аккаунт в соцсетях
                    </td>
                    <td>
                      
                    </td>
                    <td width="156px" class="last">
                      <div class="login-submit-wrap">
                        <button type="submit" name="authorize">
                          Вход
                        </button>
                      </div>
                      <div class="clear"></div>
                    </td>
                  </tr>
                </table>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  {% endblock %}

  
  <div class="popup-messages">
    {% for message in popupMessages %}
      <div class="popup-message">
        <div class="popup-message-close">&times;</div>
        <div class="popup-message-text">{{ message|raw }}</div>
      </div>
    {% endfor %}

    <div class="popup-message sample" data-type="sample">
      <div class="popup-message-close">&times;</div>
      <div class="popup-message-text" data-type="msg"></div>
    </div>

  </div>
  

  {% block container %}
    <div id="container">
      <header>
        {% block header %}
            <div class="header">
                <div class="header-wrap">
                    <div class="header-item sparkles"></div>                
                    <div class="header-item info">
                        Магазин детских товаров<br />и афиша главных событий<br />Москвы для детей
                    </div>
                    <a href="/" class="header-item logo">

                    </a>
                    
                    <div class="header-item phones">
                        <div class="header-phone">
                            +7 (495)&nbsp;&shy;724-90-26<br/>Ежедневно с 9 до 21
                        </div>

                        <div class="header-callback">
                            <div class="header-callback-icon"></div>
                            <div class="header-callback-text">заказать<br />звонок!</div>
                        </div>

                        <div class="header-callback-form">
                          <form method="post" data-type="form" action="{{ path('callback') }}">
                            <div class="input-wrap">
                              <input type="text" name="phone" placeholder="+7 (123) 456-78-90" />
                            </div>

                            <div class="header-callback-labels">
                              <label>
                                <input type="radio" name="hours" value="h1" checked="checked" /> Через полчаса
                              </label>

                              <label>
                                <input type="radio" name="hours" value="h2" /> Через час
                              </label>

                              <label>
                                <input type="radio" name="hours" value="t1" /> Сегодня после обеда
                              </label>

                              <label>
                                <input type="radio" name="hours" value="tm1" /> Завтра до обеда
                              </label>

                              <label>
                                <input type="radio" name="hours" value="tm2" /> Завтра после обеда
                              </label>
                            </div>

                            {{ markup.button({'name': 'recall', 'value': 'Заказать звонок'}) }}
                          </form>
                        </div>
                        
                        <div class="clear"></div>
                        <noindex>
                        <div class="header-social">
                            <div class="header-social-wrap">
                                {% if defaults.environment.SOCIAL.facebook %}
                                  <div class="header-social-item facebook">
                                    <a target="_blank" href="{{ defaults.environment.SOCIAL.facebook }}" rel="nofollow"></a>
                                  </div>
                                {% endif %}

                                {% if defaults.environment.SOCIAL.twitter %}
                                  <div class="header-social-item twitter">
                                    <a target="_blank" href="{{ defaults.environment.SOCIAL.twitter }}" rel="nofollow"></a>
                                  </div>
                                {% endif %}

                                {% if defaults.environment.SOCIAL.rss %}
                                  <div class="header-social-item rss">
                                    <a target="_blank" href="{{ defaults.environment.SOCIAL.rss }}"></a>
                                  </div>
                                {% endif %}

                                {% if defaults.environment.SOCIAL.vkontakte %}
                                  <div class="header-social-item vkontakte">
                                    <a target="_blank" href="{{ defaults.environment.SOCIAL.vkontakte }}" rel="nofollow"></a>
                                  </div>
                                {% endif %}

                                {% if defaults.environment.SOCIAL.gplus %}
                                  <div class="header-social-item gplus last">
                                    <a target="_blank" href="{{ defaults.environment.SOCIAL.gplus }}"></a>
                                  </div>
                                {% endif %}                                                                                                      
                            </div>
                        </div>
                        
                    </div>
                    
                </div>
				</noindex>
                <div class="header-shadow"></div>
                <div class="header-line"></div>
            </div>
            
