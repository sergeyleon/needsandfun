            {{ _self.list(list, false, true) }}
        </div>
    {% endif %}
{% endmacro %}

{% macro rating(item, url) %}
    {% import defaults.macros ~ '/common.twig' as common %}

    {{ common.rating(item, url) }}
{% endmacro %}

{% macro info(data, name) %}
