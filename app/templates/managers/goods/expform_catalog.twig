{% extends defaults.layouts ~ '/manage.twig' %}
{% import defaults.macros ~ '/manage.twig' as manage %}

{% block title %}
        Экспорт/импорт товаров YML
{% endblock %}

{% block content %}
    <script type="text/javascript" src="{{ defaults.common }}/js/mylibs/tinymce/jquery.tinymce.js"></script>
    <script type="text/javascript">
        $(function() {
            $('textarea.smallwysiwyg').each(function() {
                $(this).closest('.input-wrap').addClass('tinymce');
                $(this).tinymce({
                    script_url : '{{ defaults.common }}/js/mylibs/tinymce/tiny_mce.js',
                    mode : "textareas",
                    theme : "advanced",
                    plugins : "table,inlinepopups",
            
                    // Theme options
                    theme_advanced_buttons1 : "bold,italic,underline,strikethrough,|,bullist,numlist,|,fontselect,fontsizeselect,|,justifyleft,justifycenter,justifyright,justifyfull,|,table,removeformat,code",
                    theme_advanced_buttons2 : "",
                    theme_advanced_buttons3 : "",
                    theme_advanced_buttons4 : "",
                    theme_advanced_toolbar_location : "top",
                    theme_advanced_toolbar_align : "left",
                    theme_advanced_statusbar_location : "bottom",
                    theme_advanced_resizing : true,
                    width: 410,             
                    content_css : "{{ defaults.common }}/css/style.css"
                });
            });
        });
    </script>    

    <div class="header-title">
        {{ block('title') }}
    </div>
    
    
    <table width="100%" border="1" cellpadding="4">
          <thead>
            <tr>
                <th width="50%">
                  Экспорт
                </th>
                <th>
                  Импорт
                </th>
            </tr>
          </thead>
          <tbody>
            <tr>
                <td style="text-align:center">
                  <div style="padding:5px; ">
                  <form action="" method="post" enctype="multipart/form-data">
                  Выгрузать начиная с <input type="text" size="10" name="start" value="" /> по <input type="text" size="10" name="limit" value="" /> товаров 
                  <input type="submit" name="toexcel_catalog" value="download" /> 
                  </form>
                  <div style="padding:5px; font-size:10px; color:#666">Если пусто то выгружает 1000 товаров начиная с 0</div>
                  </div>
                </td>
                <td style="text-align:center">
                <div style="padding:5px; ">
                <form action="" method="post" enctype="multipart/form-data">
                  Файл: *xlsx
                  <input type="file" name="excel" />
                  <input type="submit" name="tomysql_catalog" value="upload" />
                  </form>
                </div>
                </td>
            </tr>
          </tbody>
        </table>
    

{% endblock %}
