{% extends defaults.layouts ~ '/manage.twig' %}

{% block title %}
Товары
{% endblock %}

{% block content %}
    <div class="header-title">
        Типы товаров [<a href="{{ path('manage_goods_type_add') }}">+</a>]
    </div>
    
    <div class="items">
        <table class="items-table">
            <thead>
                <tr>
                    <th width="50px">
                        <div>##</div>
                    </th>
                    <th class="left">
                        <div>Тип товара</div>
                    </th>
                    <th width="100px">
                        <div>Свойств</div>
                    </th>
                    <th width="100px">
                        <div>Товаров</div>
                    </th>
                </tr>
            </thead>
            <tbody>
                {% for item in items %}
                    <tr class="items-table-item">
                        <td>
                            {{ loop.index }}
                        </td>
                        <td class="left">
                            <div class="tools">
                                <div class="tools-item edit" data-type="edit">
                                    <a href="{{ path('manage_goods_type_edit', {'itemId': item.id}) }}" class="icon"></a>
                                </div>
                            
                                <div class="tools-item delete" data-type="delete" data-confirm="true">
                                    <a href="{{ path('manage_goods_type_remove', {'itemId': item.id}) }}" class="icon"></a>
                                </div>
                            
                            </div>
                            <div class="item-name">
                                {{ item.name }}
                            </div>
                            
                            {% if item.description %}
                                <div class="item-description">
                                    {{ item.description }} 
                                </div>
                            {% endif %}
                        </td>
                        <td>
                            {{ item.typeproperties|length }}
                        </td>
                        <td>
                            {{ item.goods|length }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">
                            Не найдено ни одного типа товаров. 
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}