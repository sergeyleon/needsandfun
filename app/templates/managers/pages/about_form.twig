    <form method="post">
        <input type="hidden" name="id" value="{{ item.id }}" />
        <table class="form-table" width="100%">
            <tr>
                <td width="150px">
                    Название страницы
                </td>
                <td width="300px">
                    <div class="input-wrap">
                        <input type="text" name="name" value="{{ item.name|default(item.pagetype.name) }}" />
                    </div>
                </td>     
                <td></td>
            </tr>
            
            <tr>
                <td class="top">
                    Что такое &laquo;Нужно и весело&raquo;
                </td>
                <td colspan="2">
                    <div class="input-wrap">
                        <textarea class="wysiwyg" name="contents[about]" data-common="{{ defaults.common }}">{{ item.contents.about }}</textarea>
                    </div>            
                </td>                
            </tr>

            <tr>
                <td class="top">
                    Часы работы
                </td>
                <td colspan="2">
                    <div class="input-wrap">
                        <textarea class="wysiwyg" name="contents[hours]" data-common="{{ defaults.common }}">{{ item.contents.hours }}</textarea>
                    </div>            
                </td>                
            </tr>

            <tr>
                <td class="top">
                    Контактная информация
                </td>
                <td colspan="2">
                    <div class="input-wrap">
                        <textarea class="wysiwyg" name="contents[contacts]" data-common="{{ defaults.common }}">{{ item.contents.contacts }}</textarea>
                    </div>
                </td>                
            </tr>

            <tr>
                <td></td>
                <td colspan="2">
                    <div class="form-submit">
                        <button type="submit" name="proceed">
                            Сохранить
                        </button>
                    </div>                
                </td>
            </tr>
            
        </table>
        
{% endblock %}