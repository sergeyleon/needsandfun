{% extends defaults.layouts ~ '/manage.twig' %}

{% block title 'Партнеры' %}

{% block content %}
    <div class="header-title">
        Партнеры [<a href="{{ path('manage_partners_add') }}">+</a>]
    </div>
    <table class="items-table">
        <thead>
            <tr>
                <th width="50px">
                    <div>#</div>
                </th>
                <th class="left">
                    <div>Название партнера</div>
                </th>
            </tr>
        </thead>
        <tbody>
            {% for partner in partners %}        
                <tr class="items-table-item">
                    <td>{{ loop.index }}</td>   
                    <td class="left">
                        {{ partner.name }}
                        <div class="tools">
                            <div class="tools-item edit" data-type="edit">
                                <a href="{{ path('manage_partners_edit', {'partnerId': partner.id}) }}" class="icon"></a>
                            </div>
                        
                            <div class="tools-item delete" data-type="delete" data-confirm="true">
                                <a href="{{ path('manage_partners_remove', {'partnerId': partner.id}) }}" class="icon"></a>
                            </div>
                        </div>                        
                    </td>
                </tr>
            {% endfor %}                    
        </tbody>
    </table>    
{% endblock %}