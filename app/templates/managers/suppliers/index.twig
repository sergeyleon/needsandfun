{% extends defaults.layouts ~ '/manage.twig' %}

{% block title 'Поставщики' %}

{% block content %}
    <div class="header-title">
        Поставщики [<a href="{{ path('manage_suppliers_add') }}">+</a>]
    </div>
    <table class="items-table">
        <thead>
            <tr>
                <th width="50px">
                    <div>#</div>
                </th>
                <th width="50px">
                    <div>ID</div>
                </th>
                <th class="left">
                    <div>Название поставщика</div>
                </th>
                <th class="left" width="100px">
                    <div>Товаров</div>
                </th>                    
            </tr>
        </thead>
        <tbody>
            {% for supplier in suppliers %}        
                <tr class="items-table-item">
                    <td>{{ loop.index }}</td>   
                    <td>{{ supplier.id }}</td>   
                    <td class="left">
                        {{ supplier.name }}
                        <div class="tools">
                            <div class="tools-item edit" data-type="edit">
                                <a href="{{ path('manage_suppliers_edit', {'supplierId': supplier.id}) }}" class="icon"></a>
                            </div>
                        
                            <div class="tools-item delete" data-type="delete" data-confirm="true">
                                <a href="{{ path('manage_suppliers_remove', {'supplierId': supplier.id}) }}" class="icon"></a>
                            </div>
                        </div>                        
                    </td>
                    <td><a href="{{ path('manage_suppliers_index') }}?supplier={{ supplier.id }}">{{ supplier.goods|length }}</a></td>
                </tr>
            {% endfor %}                    
        </tbody>
    </table>    
{% endblock %}