<?xml version='1.0' encoding='UTF-8'?>
<urlset xmlns='http://www.sitemaps.org/schemas/sitemap/0.9'>
  {% for page in pages %}
    <url>
      <loc>{{ page.location }}</loc>
      {% if page.lastmod %}
        <lastmod>{{ page.lastmod|date('Y-m-d\\TH:i:sP') }}</lastmod>
      {% endif %}
      <changefreq>{{ page.frequency|default('daily') }}</changefreq>
      <priority>{{ page.priority|default('0.5') }}</priority>
    </url>
  {% endfor %}
</urlset>